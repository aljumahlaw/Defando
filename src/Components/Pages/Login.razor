@page "/login"
@rendermode InteractiveServer
@inject IAuthService AuthService
@inject NavigationManager Navigation

<PageTitle>تسجيل الدخول</PageTitle>

<div class="container">
    <div class="row justify-content-center align-items-center min-vh-100">
        <div class="col-md-5 col-lg-4">
            <div class="card shadow">
                <div class="card-body p-5">
                    <div class="text-center mb-4">
                        <i class="bi bi-shield-lock fs-1 text-primary"></i>
                        <h3 class="mt-3 mb-1">تسجيل الدخول</h3>
                        <p class="text-muted">نظام إدارة المستندات القانونية</p>
                    </div>

                    <EditForm Model="@loginModel" OnValidSubmit="@HandleLogin">
                        <DataAnnotationsValidator />
                        <ValidationSummary class="text-danger mb-3" />

                        <div class="mb-3">
                            <label for="username" class="form-label">اسم المستخدم</label>
                            <InputText id="username" class="form-control" @bind-Value="loginModel.Username" />
                            <ValidationMessage For="@(() => loginModel.Username)" />
                        </div>

                        <div class="mb-4">
                            <label for="password" class="form-label">كلمة المرور</label>
                            <InputText id="password" type="password" class="form-control" @bind-Value="loginModel.Password" />
                            <ValidationMessage For="@(() => loginModel.Password)" />
                        </div>

                        <button type="submit" class="btn btn-primary w-100 mb-3" disabled="@isLoading">
                            @if (isLoading)
                            {
                                <span class="spinner-border spinner-border-sm me-2" role="status"></span>
                            }
                            تسجيل الدخول
                        </button>
                    </EditForm>

                    @if (!string.IsNullOrEmpty(errorMessage))
                    {
                        <div class="alert alert-danger mt-3" role="alert">
                            @errorMessage
                        </div>
                    }
                </div>
            </div>
        </div>
    </div>
</div>

@code {
    private LoginModel loginModel = new();
    private bool isLoading = false;
    private string? errorMessage;

    protected override async Task OnInitializedAsync()
    {
        // إذا كان المستخدم مسجل دخول بالفعل، إعادة توجيه للصفحة الرئيسية
        var isAuthenticated = await AuthService.IsAuthenticatedAsync();
        if (isAuthenticated)
        {
            Navigation.NavigateTo("/");
        }
    }

    private async Task HandleLogin()
    {
        isLoading = true;
        errorMessage = null;

        try
        {
            // Use LoginWithResultAsync to get detailed login result including lockout status
            var result = await AuthService.LoginWithResultAsync(loginModel.Username, loginModel.Password);

            if (!result.IsSuccess)
            {
                errorMessage = result.ErrorMessage ?? "اسم المستخدم أو كلمة المرور غير صحيحة. يرجى المحاولة مرة أخرى.";
                
                // If account is locked, show additional warning
                if (result.IsAccountLocked && result.LockoutExpiration.HasValue)
                {
                    var remainingMinutes = (int)Math.Ceiling((result.LockoutExpiration.Value - DateTime.UtcNow).TotalMinutes);
                    if (remainingMinutes > 0)
                    {
                        errorMessage = $"تم قفل الحساب مؤقتاً بعد محاولات تسجيل دخول فاشلة متعددة. يرجى المحاولة بعد {remainingMinutes} دقيقة.";
                    }
                }
            }
            else
            {
                // بعد نجاح تسجيل الدخول، إعادة التوجيه للصفحة الرئيسية
                Navigation.NavigateTo("/", forceLoad: true);
            }
        }
        catch (Exception ex)
        {
            errorMessage = "حدث خطأ أثناء تسجيل الدخول. يرجى المحاولة مرة أخرى.";
        }
        finally
        {
            isLoading = false;
        }
    }

    private class LoginModel
    {
        [Required(ErrorMessage = "اسم المستخدم مطلوب")]
        public string Username { get; set; } = string.Empty;

        [Required(ErrorMessage = "كلمة المرور مطلوبة")]
        public string Password { get; set; } = string.Empty;
    }
}

