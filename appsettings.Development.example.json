{
  "Logging": {
    "LogLevel": {
      "Default": "Information",
      "Microsoft.AspNetCore": "Warning",
      "Microsoft.EntityFrameworkCore": "Information"
    }
  },
  "AllowedHosts": "localhost;127.0.0.1",
  "ConnectionStrings": {
    "DefaultConnection": "Host=localhost;Port=5432;Database=LegalDocDb;Username=postgres;Password=YourDevelopmentPasswordHere"
  },
  "Smtp": {
    "Host": "smtp.example.com",
    "Port": 587,
    "UseSsl": true,
    "UserName": "noreply@example.com",
    "Password": "YourSmtpPasswordHere"
  },
  "Security": {
    "EnableRateLimiting": true,
    "EnableCsrfProtection": true,
    "EnableAuditLogging": true,
    "AccountLockout": {
      "MaxFailedAttempts": 5,
      "LockoutDurationMinutes": 30
    }
  },
  "Audit": {
    "RetentionDays": 90,
    "LogLevel": "Information"
  },
  "FileStorage": {
    "BasePath": "C:\\LegalDocFiles",
    "UseNas": false,
    "MaxFileSizeMB": 50
  },
  "Hangfire": {
    "ConnectionString": "Host=localhost;Port=5432;Database=LegalDocDb_Hangfire;Username=postgres;Password=YourDevelopmentPasswordHere",
    "DashboardEnabled": true
  },
  "Tesseract": {
    "DataPath": "C:\\Program Files\\Tesseract-OCR\\tessdata",
    "Language": "ara+eng"
  }
}



